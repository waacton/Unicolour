<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>Wacton.Unicolour</AssemblyName>
        <RootNamespace>Wacton.Unicolour</RootNamespace>
        <PackageId>$(AssemblyName)</PackageId>
        <Authors>William Acton</Authors>
        <Description>Colour conversion, interpolation, and comparison</Description>
        <Copyright>William Acton</Copyright>
        <PackageProjectUrl>https://gitlab.com/Wacton/Unicolour</PackageProjectUrl>
        <RepositoryUrl>https://gitlab.com/Wacton/Unicolour</RepositoryUrl>
        <LangVersion>10</LangVersion>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <PackageIcon>Resources\Unicolour.png</PackageIcon>
        <PackageVersion>2.0.0</PackageVersion>
        <PackageTags>colour color RGB HSB HSV HSL HWB XYZ xyY LAB LUV LCH LCHab LCHuv HSLuv HPLuv ICtCp JzAzBz JzCzHz Oklab Oklch converter colour-converter colour-conversion color-converter color-conversion colour-spaces color-spaces interpolation colour-interpolation color-interpolation comparison colour-comparison color-comparison contrast luminance deltaE chromaticity</PackageTags>
        <PackageReleaseNotes>Add DisplayP3 &amp; Rec2020 defaults</PackageReleaseNotes>
        <ApplicationIcon>Resources\Unicolour.ico</ApplicationIcon>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
    </PropertyGroup>


    <ItemGroup>
        <None Update="Resources\Unicolour.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>

        <None Include="..\LICENSE">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <!-- enables test module to access internal classes and methods -->
    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>$(AssemblyName).Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

</Project>
